<%- include ('./partials/head.ejs') %>
    <body>
        <header class="edit">
            <nav>
                <a href="/albums/">&lt; Back</a>
            </nav>
            <h1>Edit Album</h1>
        </header>
        <main>
            <form action="/albums/<%= album.id %>?_method=PUT" method="POST">
                
                <!-- image:  -->
                Name: <input type="text" name="name" /><br/>
                Description: <input type="text" name="description" /><br/>
                Band: <input type="text" name="band" /><br/> 
                Rating: <input type="number" name="band" /><br/>

                <input type="submit" name="" value="Save"/>
            </form>
            <a href="/albums/<%= album.id %>">Cancel</a>
        </main>
    </body>
</html>